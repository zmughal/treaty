<?xml version="1.0" encoding="UTF-8"?>
<!-- example contract showing how to model disjunction, inspired by the Eclipse extension point org.eclipse.ui.actionSets  -->
<contract xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:swrlb="http://www.w3.org/2003/11/swrlb" xsi:noNamespaceSchemaLocation="contract.xsd">
   <extensionpoint id="dateformatter">
      <resource id="XP1">
          <type>http://www.massey.ac.nz/se/plugincontracts/java/AbstractType</type>
         <name>org.eclipse.ui.IWorkbenchWindowActionDelegate</name>
      </resource>
      <resource id="XP2">
         <type>http://www.massey.ac.nz/se/plugincontracts/java/AbstractType</type>
         <name>org.eclipse.ui.IWorkbenchWindowPulldownDelegate</name>
      </resource>
   </extensionpoint>
   <extension>
      <resource id="X1">
         <type>http://www.massey.ac.nz/se/plugincontracts/java/InstantiableClass</type>
         <ref>class</ref>
      </resource>
   </extension>
   <constraints>
      <or>
      <!-- check use of op: prefix, see also http://www.w3.org/TR/xquery-operators/#namespace-prefixes  -->
         <propertycondition property="retarget" operator="swrlb:equal" value="true" />
         <or>
            <and>
               <propertycondition property="style" operator="swrlb:equal" value="pulldown" />
               <condition resource1="X1" resource2="XP1" relationship="http://www.massey.ac.nz/se/plugincontracts/java/implements" />
            </and>
            <condition resource1="X1" resource2="XP2" relationship="http://www.massey.ac.nz/se/plugincontracts/java/implements" />
         </or>
      </or>
   </constraints>
</contract>

