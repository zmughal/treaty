			<pathelement path="../../../eclipse3.3.2/plugins/org.eclipse.core.variables_3.2.0.v20070426.jar"/>
			<pathelement path="../../../eclipse3.3.2/plugins/org.eclipse.core.filesystem_1.1.0.v20070606.jar"/>
			<pathelement path="../../../eclipse3.3.2/plugins/org.eclipse.core.filesystem.linux.x86_1.1.0.v20070416.jar"/>
			<pathelement path="${build.result.folder}/../treaty-eclipse/bin/"/>
			<pathelement path="${build.result.folder}/../net.java.treaty.eclipse_1.0.18/bin/"/>
			<pathelement path="${build.result.folder}/../treaty-eclipse/@dot"/>
