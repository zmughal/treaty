			<pathelement path="../../../eclipse3.3.2/plugins/org.eclipse.ui.workbench_3.3.2.M20080207-0800.jar"/>
			<pathelement path="../../../eclipse3.3.2/plugins/org.eclipse.ui.workbench.compatibility_3.2.0.I20070319-0010/@dot"/>
			<pathelement path="../../../eclipse3.3.2/plugins/org.eclipse.ui.workbench.compatibility_3.2.0.I20070319-0010/compatibility.jar"/>
			<pathelement path="../../../eclipse3.3.2/plugins/com.ibm.icu_3.6.1.v20070906.jar"/>
