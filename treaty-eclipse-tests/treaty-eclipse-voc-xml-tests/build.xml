			<pathelement path="${build.result.folder}/../treaty-eclipse/bin"/>
			<pathelement path="${build.result.folder}/../net.java.treaty.eclipse_1.0.18/bin"/>
			<pathelement path="../treaty-eclipse/lib/treaty.jar"/>
