			<pathelement path="../../../eclipse3.3.2/plugins/org.eclipse.core.databinding_1.0.1.M20070822-0800.jar"/>
			<pathelement path="../../../eclipse3.3.2/plugins/org.eclipse.core.resources_3.3.1.R33x_v20080205.jar"/>
