			<pathelement path="../../../eclipse3.3.2/plugins/org.eclipse.core.runtime.compatibility.registry_3.2.100.v20070316/@dot"/>
			<pathelement path="../../../eclipse3.3.2/plugins/org.eclipse.equinox.registry_3.3.1.R33x_v20070802.jar"/>
